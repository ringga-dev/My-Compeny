<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu_home.UserMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:fontFamily="@font/neon"
            android:text="User room"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/menu_my_profile"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_card"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:paddingTop="10sp"
                    android:layout_height="0dp"
                    android:layout_weight="2.3"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginHorizontal="3sp"
                    android:layout_marginBottom="3sp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/neon"
                    android:gravity="center"
                    android:text="My Profile"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_chage_password"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_card"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.3"
                    android:src="@drawable/ic_chage_password" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginHorizontal="3sp"
                    android:layout_marginBottom="3sp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/neon"
                    android:gravity="center"
                    android:text="Chage Password"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/menu_edit_profile"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_card"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.3"
                    android:src="@drawable/ic_edit_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginHorizontal="3sp"
                    android:layout_marginBottom="3sp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/neon"
                    android:gravity="center"
                    android:text="Edit profile"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_chage_image"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_card"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.3"
                    android:src="@drawable/ic_chage_image_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginHorizontal="3sp"
                    android:layout_marginBottom="3sp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/neon"
                    android:gravity="center"
                    android:text="Chage Image"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>