<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="210sp"
            android:layout_weight="0.9"
            android:background="@drawable/bg_icon"
            android:src="@drawable/ic_weather"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:textSize="20dp"
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Status : preliminary" />

            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Tanggal :21.21.21" />

            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Jam :80.00" />

            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="lintang :Payakumbuh" />

            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Bujur :Payakumbuh" />

            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Kedalaman :Payakumbuh" />

            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="m :20" />
            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="mt :20" />
            <TextView
                android:textColor="@color/teal"
                android:fontFamily="@font/billo"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="region :fasdfa adfa" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>